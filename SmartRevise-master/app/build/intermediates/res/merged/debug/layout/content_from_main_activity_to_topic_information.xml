<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_from_main_activity_to_topic_information"
    tools:context="com.example.root.mynavigationdrawer.FromMainActivityToTopicInformation">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Revise"
        android:id="@+id/bRevise"
        android:layout_gravity="center_horizontal"
        android:onClick="launchRevisionImages"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Notes"
        android:id="@+id/bUpload"
        android:layout_gravity="center_horizontal"
        android:onClick="launchCamera"

        />


</LinearLayout>
