<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fillViewport="true"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="50dp"
    >

    <!--
    <TextView
        android:id="@+id/conatct_head_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/Contact_head"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/heading" />

        -->
    <ImageView
        android:id="@+id/my_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:contentDescription="image"
        android:src="@drawable/contact_me" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/conatct_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:paddingLeft="23dp"
                android:text="Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/sunshine_dark_blue"
                android:textColorHighlight="@color/grey_700" />

            <TextView
                android:id="@+id/contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:paddingLeft="23dp"
                android:text="E-Mail"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/sunshine_dark_blue" />

            <TextView
                android:id="@+id/conatct_github"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:paddingLeft="23dp"
                android:text="Github Link"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/sunshine_dark_blue" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/conatct_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text=":  Lokesh Koshale"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/sunshine_dark_blue" />

            <TextView
                android:id="@+id/contact_email_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text=":  lkoshale@gmail.com"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/sunshine_dark_blue" />

            <TextView
                android:id="@+id/conatct_github_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text=":  https://github.com/lkoshale"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/sunshine_dark_blue" />


        </LinearLayout>


    </LinearLayout>


    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/contact_feedbackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="5dp"
        android:text="Send Feedback" />


</LinearLayout>

</ScrollView>