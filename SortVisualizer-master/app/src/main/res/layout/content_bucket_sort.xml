<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_bucket_sort"
    tools:context="com.example.root.sortvisualizer.BucketSortActivity">

    <TextView
        android:id="@+id/list_items"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_height="40dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bucket_list_view"
        android:layout_width="match_parent"
        android:layout_below="@+id/list_items"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="300dp">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/final_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bucket_list_view"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:text="Final Sort list after merging all bucket:- "/>

    <TextView
        android:id="@+id/sorted_list_items"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_below="@+id/final_text"
        android:layout_height="40dp"/>

</RelativeLayout>
